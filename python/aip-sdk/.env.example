# AIP SDK Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# REQUIRED: API Configuration
# =============================================================================

# Your AIP Platform API key for authentication
AIP_API_KEY=your-api-key-here

# Your AIP Platform API URL (e.g., https://your-platform.com/api)
AIP_API_URL=https://your-platform.com/api

# =============================================================================
# OPTIONAL: Client Configuration
# =============================================================================

# Request timeout in seconds (default: 30.0)
AIP_TIMEOUT=30.0

# =============================================================================
# OPTIONAL: Renderer Configuration
# =============================================================================

# Theme for the streaming renderer: "dark" or "light" (default: "dark")
AIP_THEME=dark

# Disable emojis in the streaming view: "true" or "false" (default: "false")
AIP_NO_EMOJI=false

# =============================================================================
# OPTIONAL: Development & Testing
# =============================================================================

# Custom run ID for example scripts (auto-generated if not set)
# EXAMPLES_RUN_ID=my-test-run

# =============================================================================
# Example Values for Local Development
# =============================================================================

# For local development with docker-compose:
# AIP_API_KEY=your-local-key
# AIP_API_URL=http://localhost:8000

# For production:
# AIP_API_KEY=your-production-api-key
# AIP_API_URL=https://your-production-platform.com/api
